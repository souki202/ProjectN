<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.projectn.StatusActivity" >

    <TextView
        android:id="@+id/levelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:text="Level"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/atkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/levelText"
        android:layout_below="@+id/levelText"
        android:text="攻撃力"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/atkValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/atkText"
        android:layout_alignBottom="@+id/atkText"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/atkText"
        android:text="1"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/defText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/atkText"
        android:layout_below="@+id/atkText"
        android:text="防御力"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/defValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/defText"
        android:layout_alignBottom="@+id/defText"
        android:layout_alignLeft="@+id/atkValue"
        android:text="1"
        android:textSize="40sp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="戻る" />

    <TextView
        android:id="@+id/levelValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/levelText"
        android:layout_alignLeft="@+id/atkValue"
        android:text="1"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/intelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/defText"
        android:layout_below="@+id/defText"
        android:text="知力"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/intelValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/intelText"
        android:layout_alignBottom="@+id/intelText"
        android:layout_alignLeft="@+id/defValue"
        android:text="1"
        android:textSize="40dp" />

</RelativeLayout>
